global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['node_exporter:9100']

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']

  - job_name: 'jenkins'
    metrics_path: '/jenkins/prometheus'
    static_configs:
      - targets: ['{{ ci_ec2_public_ip }}:80']

  - job_name: 'alertmanager'
    static_configs:
      - targets: ['alertmanager:9093']